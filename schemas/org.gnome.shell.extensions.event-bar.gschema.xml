<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.gnome.shell.extensions.event-bar" path="/org/gnome/shell/extensions/event-bar/">
    <!-- See also: https://docs.gtk.org/glib/gvariant-format-strings.html -->
    <key name="which-panel" type="i">
      <default>1</default>
    </key>
    <key name="event-length" type="i">
      <default>20</default>
    </key>
    <key name="show-duration" type="b">
      <default>false</default>
    </key>
    <key name="show-time-before-event" type="b">
      <default>true</default>
    </key>
    <key name="show-time-of-event" type="b">
      <default>false</default>
    </key>
    <key name="show-event-icon" type="b">
      <default>true</default>
    </key>
    <key name="show-event-name" type="b">
      <default>true</default>
    </key>
    <key name="show-next-event-during-meeting" type="b">
      <default>true</default>
    </key>
    <key name="show-color-bar" type="b">
      <default>false</default>
      <summary>Show colored bar before event</summary>
      <description>Display a 3px colored bar before the event text</description>
    </key>
    <key name="color-bar-color" type="s">
      <default>'auto'</default>
      <summary>Color of the event bar</summary>
      <description>Color used for the colored bar before events (use 'auto' for GNOME accent color)</description>
    </key>
    <key name="font-size" type="i">
      <default>0</default>
      <range min="0" max="24"/>
      <summary>Font size for event text</summary>
      <description>Font size in points for event text (0 = use system default)</description>
    </key>
    <key name="text-color" type="s">
      <default>''</default>
      <summary>Color of the event text</summary>
      <description>Color used for the event text (empty = use system default)</description>
    </key>

  </schema>
</schemalist>
